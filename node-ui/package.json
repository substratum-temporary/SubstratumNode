{
  "name": "SubstratumNode",
  "description": "SubstratumNode user interface",
  "version": "1.0.0-rc.2",
  "homepage": "https://substratum.net",
  "repository": "https://github.com/SubstratumNetwork/SubstratumNode",
  "author": "Substratum LLC <support@substratum.net>",
  "copyright": "Copyright (c) 2017-2019 Substratum LLC (${homepage}) and/or its affiliates. All rights reserved.",
  "license": "GPL-3.0",
  "main": "main.js",
  "standard": {
    "ignore": [
      "generated/**"
    ]
  },
  "build": {
    "appId": "net.substratum.node",
    "asar": false,
    "productName": "SubstratumNode",
    "directories": {
      "output": "electron-builder-out"
    },
    "files": [
      "!ci/*",
      "!test/*",
      "!*.iml",
      "!src/*",
      "!coverage/*",
      "!README.md",
      "!icons/*",
      "!angular.json",
      "!tsconfig.json",
      "!tslint.json"
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "forceCodeSigning": true,
      "identity": "Substratum Services, Inc. (TKDGR66924)",
      "target": "dmg",
      "type": "distribution"
    },
    "win": {
      "icon": "icons/icon.ico"
    },
    "linux": {
      "icon": "icons",
      "category": "Network"
    }
  },
  "dmg": {
    "title": "${productName}-${version}",
    "artifactName": "${productName}-${version}.${ext}"
  },
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start": "electron .",
    "build": "ng build --base-href ./",
    "build-prod": "ng build --base-href ./ --prod",
    "ts-test": "ng test --no-watch --browsers=ChromeHeadlessNoSandbox",
    "js-test": "jasmine test/*_test.js",
    "lint": "standard --fix && ng lint",
    "unit": "jasmine test/*_test.js && ng test --no-watch --browsers=ChromeHeadlessNoSandbox",
    "spec": "jasmine test/*_spec.js",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.1",
    "@angular/common": "~8.2.1",
    "@angular/compiler": "~8.2.1",
    "@angular/core": "~8.2.1",
    "@angular/forms": "~8.2.1",
    "@angular/platform-browser": "~8.2.1",
    "@angular/platform-browser-dynamic": "~8.2.1",
    "@angular/router": "~8.2.1",
    "core-js": "^2.6.5",
    "electron-log": "^3.0.7",
    "ethers": "^4.0.33",
    "isomorphic-ws": "^4.0.1",
    "node-cmd": "^3.0.0",
    "rxjs": "~6.5.2",
    "sudo-prompt": "^8.2.5",
    "tree-kill": "^1.2.1",
    "tslib": "^1.9.0",
    "ws": "^6.2.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.802.1",
    "@angular/cli": "~8.2.1",
    "@angular/compiler-cli": "~8.2.1",
    "@angular/language-service": "~8.2.1",
    "@types/bip32": "^1.0.2",
    "@types/bip39": "^2.4.2",
    "@types/ethereumjs-util": "^5.2.0",
    "@types/jasmine": "^3.3.16",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~11.11.3",
    "codelyzer": "^5.1.0",
    "electron": "^4.2.8",
    "electron-builder": "^20.39.0",
    "jasmine": "~2.99.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.6",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ps-list": "^6.2.0",
    "spectron": "^5.0.0",
    "standard": "^13.0.2",
    "testdouble": "^3.12.2",
    "ts-node": "~8.0.3",
    "tslint": "~5.14.0",
    "typescript": "3.5.3"
  }
}
